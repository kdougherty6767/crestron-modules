Function RelinquishDigitals()
{
	wait(relinquishAfter,DigitalWait)
    {
    	integer i ;
		i = 1;

		for(i = 1 to numberOfDigitals)
		{
			if(lastDigital[i] > 0)
			{
				pulse(1,RelinquishDigital[i]);
                lastDigital[i] = 0;
				delay(20);
			}
		}
	}
    
}

Function RelinquishAnalogs()
{
	wait(relinquishAfter,AnalogWait)
    {
    	integer i ;
		i = 1;

		for(i = 1 to numberOfAnalogs)
		{
			if(lastAnalog[i] > 0)
			{
				pulse(1,RelinquishAnalog[i]);
				lastAnalog[i] = 0;
				delay(20);
			}
				
		}
	}


}



